<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="640dp"
	android:layout_width="360dp"
	android:alpha="1"
	android:background="#231D1D">

	<Button
		android:layout_height="90dp"
		android:layout_width="90dp"
		android:text="SEND"
		android:layout_y="100dp"
		android:layout_x="230dp"
		android:id="@+id/sendbutton"
		android:onClick="send"/>

	<Button
		android:layout_height="40dp"
		android:layout_width="90dp"
		android:text="Clear"
		android:layout_x="230dp"
		android:layout_y="400dp"
		android:id="@+id/clearbutton"/>

	<EditText
		android:layout_height="40dp"
		android:layout_width="180dp"
		android:ems="10"
		android:layout_y="100dp"
		android:layout_x="30dp"
		android:id="@+id/sendip"
		android:hint="Send Address"/>

	<EditText
		android:layout_height="40dp"
		android:layout_width="180dp"
		android:ems="10"
		android:layout_y="150dp"
		android:id="@+id/sendport"
		android:inputType="number"
		android:hint="Send port"
		android:layout_x="30dp"/>

	<EditText
		android:inputType="textMultiLine"
		android:layout_width="290dp"
		android:ems="10"
		android:layout_height="80dp"
		android:layout_y="200dp"
		android:layout_x="30dp"
		android:id="@+id/sendmsg"
		android:hint="Enter message here.."
		android:lines="2"
		android:gravity="bottom"/>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="Send"
		android:layout_x="20dp"
		android:layout_y="50dp"
		android:textSize="20sp"/>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="Receive"
		android:layout_x="20dp"
		android:layout_y="350dp"
		android:textSize="20sp"/>

	<EditText
		android:layout_height="40dp"
		android:layout_width="180dp"
		android:ems="10"
		android:layout_x="30dp"
		android:layout_y="400dp"
		android:id="@+id/hostip"
		android:hint="Host Address"
		android:inputType="text"/>

	<EditText
		android:layout_height="40dp"
		android:layout_width="140dp"
		android:ems="10"
		android:layout_y="450dp"
		android:layout_x="180dp"
		android:hint="Listen Port"
		android:id="@+id/listenport"
		android:text="7500"/>

	<EditText
		android:layout_height="40dp"
		android:layout_width="140dp"
		android:ems="10"
		android:layout_y="450dp"
		android:layout_x="30dp"
		android:hint="Host port"
		android:id="@+id/hostport"/>

	<EditText
		android:layout_height="80dp"
		android:layout_width="290dp"
		android:ems="10"
		android:id="@+id/rcvdmsg"
		android:layout_y="500dp"
		android:layout_x="30dp"
		android:lines="2"
		android:hint="Received Message"
		android:gravity="bottom"/>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:text="Local IP"
		android:layout_y="20dp"
		android:layout_x="200dp"
		android:id="@+id/localip"/>

</AbsoluteLayout>

